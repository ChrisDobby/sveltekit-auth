{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./lib",
        "lib": ["esnext", "DOM"],
        "target": "esnext",
        "declaration": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": true
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js"]
}
